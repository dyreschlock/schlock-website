<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" >
    <class name="com.schlock.website.entities.blog.ImageFolder" table="blog_image_folder">
        <id name="id" unsaved-value="null">
            <generator class="native" />
        </id>

        <property name="folderName" not-null="true" />
        <property name="googleId" />

        <many-to-one name="parent" column="parentId" class="com.schlock.website.entities.blog.ImageFolder" />
    </class>
</hibernate-mapping>