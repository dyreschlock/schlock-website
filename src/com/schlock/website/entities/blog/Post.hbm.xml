<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" >
    <class name="com.schlock.website.entities.blog.Post" table="blog_posts">
        <id name="id" unsaved-value="null">
            <generator class="native" />
        </id>
        <discriminator />

        <property name="uuid" not-null="true" />
        <property name="title" />
        <property name="created" />

        <property name="published" />
        <property name="pinned" />
        <property name="page" />

        <set name="categories" cascade="none" lazy="true" table="blog_posts_categories">
            <key column="postId" />
            <many-to-many class="com.schlock.website.entities.blog.Category" column="categoryId" />
        </set>

        <subclass name="com.schlock.website.entities.blog.TextPost">
            <property name="bodyText" />
            <property name="bodyHTML" />
        </subclass>

        <subclass name="com.schlock.website.entities.blog.PhotoPost">
            <property name="fileLocation" />
            <property name="text" />
        </subclass>
    </class>
</hibernate-mapping>