<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" >
    <class name="com.schlock.website.entities.blog.Post" table="blog_posts">
        <id name="id" unsaved-value="null">
            <generator class="native" />
        </id>

        <property name="uuid" not-null="true" />
        <property name="wpid" />
        <property name="mtid" />

        <property name="title" />

        <property name="created" />
        <property name="createdGMT" />

        <property name="published" />
        <property name="pinned" />
        <property name="page" />

        <property name="bodyText" length="1000000" />
        <property name="bodyHTML" length="1000000" />

        <set name="categories" cascade="none" lazy="true" table="blog_posts_categories">
            <key column="postId" />
            <many-to-many class="com.schlock.website.entities.blog.Category" column="categoryId" />
        </set>
    </class>
</hibernate-mapping>