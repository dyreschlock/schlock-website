<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html t:type="blog/layoutblog" post="page" pageDescription="pageDescription"
     xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
     xmlns:l="tapestry-library:blog/link"
     xmlns:c="tapestry-library:blog/content"
    >

    <div id="postContent" class="projects archive">

        <h1 id="headline">${pageTitle}</h1>

        <div class="postBody">
            <div class="fourColumns">
                <t:loop source="keywords" value="currentKeyword" index="currentIndex">
                    <div class="column ${extraCss}">

                        <div class="categoryCategory">
                            <a href="${currentKeywordLink}">
                                ${currentKeyword.title}
                            </a>
                        </div>

                        <t:loop source="subKeywords" value="currentSubKeyword">
                            <div class="categoryTitle">
                                <a class="${keywordCssClass}" href="${currentSubKeywordLink}">
                                    ${currentSubKeyword.title}
                                </a>
                            </div>
                        </t:loop>
                        <br class="clr" />
                    </div>
                </t:loop>
                <br class="clr" />
            </div>

            <p class="description"><t:outputraw value="pageDescription" /></p>

            <t:loop source="allSubKeywords" value="currentSubKeyword">

                <div class="title clr">
                    ${currentSubKeyword.parent.title} /
                    <span class="${currentSubKeyword.parent.name}">${currentSubKeyword.title}</span>
                </div>

                <div class="categoryPosts">
                    <t:loop source="projectPages" value="currentPage">
                        <l:postlink post="currentPage" cssClass="'archive'" displayDate="true" displayNumber="false" />
                    </t:loop>
                    <br class="clr" />
                </div>

                <div class="postPreviews">
                    <t:loop source="topProjectPages" value="currentPage">
                        <c:minipostdisplay post="currentPage" />
                        <br class="clr" />
                    </t:loop>
                </div>

            </t:loop>

        </div>
    </div>
</html>