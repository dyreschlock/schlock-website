<!DOCTYPE html>
<html
        xmlns="http://www.w3.org/1999/xhtml"
        xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
        xmlns:g="tapestry-library:apps/games"
>
    <head>

        <title>${plainTitle}</title>
        <link rel="icon" href="/icons/favicon.ico" type="image/x-icon"/>

        <style>${css}</style>
    </head>
    <body>
        <div class="body">
            <h2><t:outputraw value="title" /></h2>

            <t:if test="!consoleSelected">
                <table class="layout">
                    <tr>
                        <td rowspan="2">
                            <g:collectioncount currentConsole="selectedConsole" />
                            <!--g:platformcount platformGroup="all" /-->
                        </td>
                        <td>
                            <g:platformcount platformGroup="nintendo"/>
                        </td>
                        <td>
                            <g:platformcount platformGroup="sony" />
                        </td>
                        <td>
                            <g:platformcount platformGroup="sega" />
                            <g:platformcount platformGroup="microsoft" />
                        </td>
                    </tr>
                    <tr>
                        <td><!-- Most Common by Dev --></td>
                        <td><!-- Most Common by Pub --></td>
                        <td><!-- Most Common Year --></td>
                    </tr>
                </table>
            </t:if>

            <t:if test="consoleSelected">

                <table class="layout">
                    <tr>
                        <td rowspan="2">
                            <g:collectioncount currentConsole="selectedConsole" />
                            <g:platformcount platformGroup="all" />
                        </td>
                        <td class="data">
                            <g:platformgamelist console="selectedConsole" />
                        </td>
                    </tr>
                </table>
            </t:if>

        </div>
    </body>
</html>