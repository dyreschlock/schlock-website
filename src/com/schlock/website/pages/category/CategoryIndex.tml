<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html t:type="blog/layoutblog" pageName="pageTitle"
    xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
    xmlns:l="tapestry-library:blog/link"
    xmlns:c="tapestry-library:blog/content"
    >

    <div id="postContent" class="archive">

        <h1>${pageTitle}</h1>

        <div class="postBody">
            <t:loop source="top3Posts" value="currentPost" index="currentIndex">
                <div id="${divId}">
                    <t:eventlink t:id="selectPost" context="currentPost.uuid" />

                    <t:if test="hasImage">
                        <div class="postImage" style="background-image: url(${currentImage})" />
                    </t:if>
                    <t:if test="!hasImage">
                        <div class="postImage noImage" />
                    </t:if>

                    <h2>${currentPost.title}</h2>
                    <div class="postDate">${createdDate}</div>
                    <br class="clr" />
                </div>
            </t:loop>

            <div id="archivedPosts" class="clr">
                <t:loop source="categories" value="currentCategory">
                    <div class="title">${categoryTitle}</div>

                    <t:loop source="posts" value="currentPost">
                        <l:postlink post="currentPost" cssClass="'archive'" />
                    </t:loop>
                    <br class="clr" />
                </t:loop>
            </div>
        </div>
    </div>
</html>