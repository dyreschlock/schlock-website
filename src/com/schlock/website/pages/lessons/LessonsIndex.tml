<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html t:type="blog/layoutblog" post="page"
    xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
    xmlns:c="tapestry-library:blog/content"
    xmlns:l="tapestry-library:blog/content/lessons"
    >

    <c:postdisplay post="page" cssClass="lessons">
    <t:zone t:id="postZone" id="postZone" t:update="show">

        <div class="postBody">
            <div class="fourColumns">
                <t:loop source="totalYears" value="currentYear" index="currentIndex">
                    <div class="column ${extraCss}">

                        <t:eventlink event="selectYear" context="${currentYear}" zone="postZone">
                            <t:outputraw value="yearTitle" />
                        </t:eventlink>
                    </div>
                </t:loop>
                <br class="clr" />
            </div>

            <div class="lessonBody">
                <t:loop source="grades" value="currentGrade">
                    <l:lessongrade grade="currentGrade" year="selectedYear" />
                </t:loop>
            </div>
        </div>
    </t:zone>
    </c:postdisplay>
</html>