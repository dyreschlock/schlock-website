<t:container
        xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
>
    <div class="panel">
        <table class="platformData">
            <tr>
                <th class="name">${platformGroup}</th>
            </tr>

            <t:loop source="consoleData" value="currentConsole" index="currentIndex">
                <tr>
                    <td class="name ${currentConsole.code}"><a href="/apps/games/${currentConsole.code}">${currentConsole.name}</a></td>
                    <td class="count ${evenOdd}">${currentConsoleCount}</td>
                </tr>
            </t:loop>

            <tr>
                <td class="empty"></td>
                <td class="totalConsoleCount">${totalCount}</td>
            </tr>

        </table>
    </div>
</t:container>