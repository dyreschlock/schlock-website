<t:container
    xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
    >
    <div id="postContent">

        <div id="phaseTitle">
            ${message:registration-phase}
        </div>

        <div class="postBody">
            <t:if test="playerRegistered">

                <h1 id="headline">
                    ${message:registered}
                </h1>

                <span class="playerName">
                    ${playerName}
                </span>

                <p>${message:please-wait}</p>

            </t:if>
            <t:if test="!playerRegistered">
                <t:form t:id="playerForm" id="playerForm">

                    <h1 id="headline">
                        <t:label t:for="name">
                            ${message:instructions}
                        </t:label>
                    </h1>

                    <p>
                        <t:textfield t:id="name" value="newPlayerName" t:validate="required" />
                    </p>

                    <t:if test="nameInUse">
                        <p class="error">${message:error-name-in-use}</p>
                    </t:if>

                    <div class="buttonRow">
                        <t:linksubmit t:id="submitButton">
                            <div class="gameButton">
                                ${message:enter}
                            </div>
                        </t:linksubmit>
                    </div>
                </t:form>
            </t:if>

        </div>
    </div>
</t:container>