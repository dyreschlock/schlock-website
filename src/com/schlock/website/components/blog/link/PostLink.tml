<t:container
    xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
    >

    <t:eventlink t:id="selectPost" context="post.uuid">
        <div id="postLink">
            <h2>${post.title}</h2>
            <t:if test="!post.page">
                <div id="postDate">${post.prettyCreatedDate}</div>
            </t:if>
        </div>
    </t:eventlink>

</t:container>