<t:container
     xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
    >

    <div class="sidetitle">
        Recent Entries
    </div>

    <div class="side">

        <t:loop source="posts" value="currentPost">

            <a href="${currentPostLink}">${currentPost.title}</a><br/>
        </t:loop>
    </div>
</t:container>