<t:container
     xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
    >


                <t:loop source="posts" value="currentPost">

                    <p align="left">
                        <a href="${currentPostLink}"><font color="#FFFFFF" size="2">${currentPost.title}</font></a>
                        <br/>
                        <font size="2" color="#CCCCCC">${currentPostDescription}</font>
                    </p>

                </t:loop>



</t:container>