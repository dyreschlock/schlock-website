<t:container
     xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
     xmlns:v7="tapestry-library:old/v7"
    >
    <h3>Categories</h3>
    <ul>
        <t:loop source="keywords" value="currentKeyword">

            <li class="cat-item">
                <v7:version7categoryLink keyword="currentKeyword" /> (${postCount})
            </li>

        </t:loop>
    </ul>
</t:container>