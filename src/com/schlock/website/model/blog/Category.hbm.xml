<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" >
    <class name="com.schlock.website.model.blog.Category" table="blog-categories">
        <id name="id" unsaved-value="null">
            <generator class="native" />
        </id>

        <property name="name" />
        <property name="order" />

        <many-to-one name="parent" column="parentId" class="com.schlock.website.model.blog.Category" />

    </class>
</hibernate-mapping>